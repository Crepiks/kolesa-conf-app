<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hello.presentation.HelloActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:background="@color/activity_hello_header_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hello_activity_logo"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/logo_description"
            app:srcCompat="@drawable/ic_logo_white" />

        <ImageView
            android:id="@+id/hello_activity_virus_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/virus_description"
            app:srcCompat="@drawable/ic_virus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/text_primary_dark"
            android:textStyle="bold"
            android:text="@string/what_is_your_name" />

        <EditText
            android:id="@+id/activity_hello_name_input"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/edit_text_border"
            android:inputType="text" />

        <Button
            android:id="@+id/activity_hello_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/background_submit_button"
            android:enabled="false"
            android:text="@string/continue_button" />

    </LinearLayout>

</LinearLayout>